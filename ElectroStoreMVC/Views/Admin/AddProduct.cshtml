@{
    ViewData["Title"] = "D&L, Добавление продукта - Admin";
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <!-- Custom styles for this template -->
    <link href="carousel.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h2>Добавление товара</h2>
            </div>
            <div class="row g-5">
                
                <div >
                    <form id="submitForm" onsubmit="return valid();" method="post" data-ajax="true" 
                          data-ajax-success="ajaxSuccessFunc" data-ajax-failure="ajaxFailureFunc"
                          class="needs-validation" role="form">
                        <div class="row g-3">

                            <div class="col-sm-6">
                                <label for="ProductName" class="form-label">Название продукта</label>
                                <input name="ProductName" type="text" class="form-control" placeholder="Название" value="" required>
                                <div class="invalid-feedback">
                                    Данное поле обязательное для заполнения.
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label for="ProductType" class="form-label">Тип продукта</label>
                                <input name="ProductType" type="text" class="form-control" placeholder="Тип" value="" required>
                                <div class="invalid-feedback">
                                    Данное поле обязательное для заполнения.
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label for="ProductImage" class="form-label">Ссылка на изображение</label>
                                <input name="ProductImage" type="text" class="form-control" placeholder="Ссылка" value="" required>
                                <div class="invalid-feedback">
                                    Данное поле обязательное для заполнения.
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label for="ProductCount" class="form-label">Количество продукта</label>
                                <input id="productCountId" name="ProductCount" type="text" class="form-control" placeholder="Количество" required>
                                <div class="invalid-feedback">
                                    Данное поле обязательное для заполнения.
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label for="ProductPrice" class="form-label">Цена продукта</label>
                                <input id="productPriceId" name="ProductPrice" type="text" class="form-control" placeholder="Цена" required>
                                <div class="invalid-feedback">
                                    Данное поле обязательное для заполнения.
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="ProductDescription" class="form-label">Описание продукта</label>
                                <textarea name="ProductDescription" type="text" class="form-control" placeholder="Описание" required></textarea>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div>
                            <button id="submitBtn" class="w-100 btn btn-dark btn-lg" type="submit">Добавить продукт в базу данных</button>
                            <div id="alertinfo" alert-hide="true" class="alert-info" style="text-align:center;height:5%;font-size:14pt;" role="alert">
                            </div>
                            <div id="alertinfoFail" alert-hide="false" class="alert-warning" style="text-align:center;height:5%;font-size:14pt;" role="alert">
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </main>
    </div>
    @section scripts { 
        <script>
            function valid() {
                if (isNaN(parseInt(document.getElementById('productCountId').value))) {
                    alert("Введите в поле количество число!");
                    $("#submitForm").attr('data-ajax', 'false');

                    return false;
                }
                if (isNaN(parseFloat(document.getElementById('productPriceId').value))) {
                    alert("Введите в поле цена число!");
                    $("#submitForm").attr('data-ajax', 'false');

                    return false;
                }
                $("#submitForm").attr('data-ajax', 'true');
                return true;
            };

            function ajaxSuccessFunc() {
                    $("div#alertinfo").delay(200).show(2000);
                    $("div#alertinfo").text("Добавление выполнено успешно.");
                    $(".form-control").val('');
                    $("div#alertinfo").delay(2200).hide(3000);
            }
            function ajaxFailureFunc() {
                $("div#alertinfoFail").delay(1200).show(2000);
                $("div#alertinfoFail").text("Добавление не выполнено.");
                $(".form-control").val('');
                $("div#alertinfoFail").delay(2200).hide(3000);
            }
        </script>
    }
</body>
</html>