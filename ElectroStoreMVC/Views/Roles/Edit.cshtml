@using Microsoft.AspNetCore.Identity
@model ElectroStoreMVC.ViewModels.ChangeRoleViewModel

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"  @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
            <a style="margin-left:10px;">@role.Name </a>
        }
    </div>
    <button type="submit" class="btn btn-dark">Сохранить</button>
</form>