@model ElectroStoreMVC.ViewModels.LoginViewModel

<style>
    #inp {
        margin-left: auto;
        margin-right: auto;
        width:50%;
    }
    li {
        list-style-type: none;
    }
</style>

<body class="text-center">

    <main class="form-signin">
        <form ethod="post" asp-controller="Account" asp-action="Login"
                    asp-route-returnUrl="@Model.ReturnUrl">
            <h1 class="h3 mb-3 fw-normal">Авторизация</h1>
            <div asp-validation-summary="ModelOnly"></div>

            <div id="inp" class="form-floating">
                <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput" asp-for="Email">Email адрес</label>
                <span asp-validation-for="Email"></span>
            </div>
            <div id="inp" style="margin-top:20px;"class="form-floating">
                <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword" asp-for="Password">Пароль</label>
                <span asp-validation-for="Password"></span>
            </div>

            <div style="margin-top:20px;" class="checkbox mb-3">
                <label asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" />
            </div>
            <button class="w-25 btn btn-lg btn-primary" type="submit">Войти</button>
        </form>
    </main>
</body>
